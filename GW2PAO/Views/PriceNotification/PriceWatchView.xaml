<UserControl x:Class="GW2PAO.Views.PriceNotification.PriceWatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:core="clr-namespace:GW2PAO.PresentationCore;assembly=GW2PAO.PresentationCore"
             xmlns:converters="clr-namespace:GW2PAO.Style.Converters"
             mc:Ignorable="d" 
             TextOptions.TextFormattingMode="Display">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Style/ResourceLibrary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibleHiddenConverter x:Key="BoolToVisibility" />
            <SolidColorBrush x:Key="TextBoxBorder" Color="Orange" Opacity="0.5" />

            <DockPanel x:Key="RemoveGraphic" Height="8">
                <Path HorizontalAlignment="Center" VerticalAlignment="Center"
                      Stretch="Uniform"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                      StrokeThickness="2">
                    <Path.Data>
                        <PathGeometry>
                            <PathGeometry.Figures>
                                <PathFigure StartPoint="0,0">
                                    <LineSegment Point="20,20"/>
                                </PathFigure>
                                <PathFigure StartPoint="0,20">
                                    <LineSegment Point="20,0"/>
                                </PathFigure>
                            </PathGeometry.Figures>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </DockPanel>

        </ResourceDictionary>
    </UserControl.Resources>


    <!--See code-behind for DataContext/ViewModel details-->
    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
          Margin="5,0,5,0"
          Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Remove Button -->
        <Button Grid.Column="0"
                Margin="5"
                Height="16"
                Content="{StaticResource CloseGraphic}"
                Command="{Binding RemoveCommand}"/>

        <!-- Item's Icon -->
        <Image Grid.Column="1"
               Margin="5,5,5,5"
               Width="30" Height="30"
               Source="https://render.guildwars2.com/file/C6110F52DF5AFE0F00A56F9E143E9732176DDDE9/65015.png" />

        <!-- Item's Name -->
        <TextBox Grid.Column="2" Margin="5"
                 Height="22"
                 BorderBrush="{StaticResource TextBoxBorder}">
            <TextBox.Text>
                <Binding Path="ItemName" UpdateSourceTrigger="LostFocus" />
            </TextBox.Text>
        </TextBox>

        <!--Buy Order Limit-->
        <CheckBox Grid.Column="3"
                  Style="{StaticResource AlternateCheckboxStyle}"
                  Margin="10,0,0,0" VerticalAlignment="Center"
                  IsChecked="{Binding Data.IsBuyOrderNotificationEnabled}"/>
        <StackPanel Grid.Column="4" Orientation="Horizontal"
                    Visibility="{Binding Data.IsBuyOrderNotificationEnabled, Converter={StaticResource BoolToVisibility}}">
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                         FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.BuyOrderLimit.Gold" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/gold_coin.png"
                           Height="14" Width="14"
                           Margin="1,0,5,0"/>
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                         FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.BuyOrderLimit.Silver" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/silver_coin.png"
                           Height="14" Width="14"
                           Margin="1,0,5,0"/>
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                         FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.BuyOrderLimit.Copper" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/copper_coin.png"
                       Height="14" Width="14"
                       Margin="1,0,0,0"/>
        </StackPanel>

        <!--Sell Listing Limit-->
        <CheckBox Grid.Column="5"
                  Style="{StaticResource AlternateCheckboxStyle}"
                  Margin="15,0,0,0" VerticalAlignment="Center"
                  IsChecked="{Binding Data.IsSellListingNotificationEnabled}" />
        <StackPanel Grid.Column="6" Orientation="Horizontal"
                    Visibility="{Binding Data.IsSellListingNotificationEnabled, Converter={StaticResource BoolToVisibility}}">
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                     FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.SellListingLimit.Gold" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/gold_coin.png"
                           Height="14" Width="14"
                           Margin="1,0,5,0"/>
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                     FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.SellListingLimit.Silver" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/silver_coin.png"
                           Height="14" Width="14"
                           Margin="1,0,5,0"/>
            <TextBox Width="35" Height="22" BorderBrush="{StaticResource TextBoxBorder}"
                     FlowDirection="RightToLeft" GotKeyboardFocus="TextBox_GotKeyboardFocus" GotMouseCapture="TextBox_GotMouseCapture">
                <TextBox.Text>
                    <Binding Path="Data.SellListingLimit.Copper" UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>
            <Image Source="../../Resources/copper_coin.png"
                       Height="14" Width="14"
                       Margin="1,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
